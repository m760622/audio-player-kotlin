<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pntstudio.buzz.tedaudio.fragment.EnglishSubFragment">
    <com.google.android.gms.ads.AdView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cover_img"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/english_sub_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banned_id_english_sub"
        >
    </com.google.android.gms.ads.AdView>

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >



    <TextView

        android:textSize="13sp"
        android:lineSpacingExtra="8dp"
        android:layout_margin="@dimen/fab_margin"
        android:textAppearance="@style/TextAppearance.Uamp.Subtitle"
       android:textColor="@color/white"
        android:id="@+id/transcript_tv"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent"
        android:text="@string/empty_sub" />


    </ScrollView>

</LinearLayout>
